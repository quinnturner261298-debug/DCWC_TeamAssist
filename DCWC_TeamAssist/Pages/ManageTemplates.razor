@page "/templates"
@using DCWC_TeamAssist.Models
@using DCWC_TeamAssist.Services
@using SixLabors.ImageSharp
@using SixLabors.ImageSharp.PixelFormats
@using Microsoft.JSInterop
@inject CharacterDataService CharacterData
@inject TemplateStorageService TemplateStorage
@inject ImageProcessingService ImageProcessor
@inject IJSRuntime JSRuntime

<PageTitle>Character Templates</PageTitle>

<h1>??? Character Template Images</h1>

<p class="lead">Upload reference images for each character to enable automatic recognition from screenshots.</p>

<div class="alert alert-info">
    <h5>?? How to Use:</h5>
    <ol>
        <li>Take a screenshot of your roster showing a single character clearly</li>
        <li>Crop just the character portrait/card</li>
        <li>Upload it here for that specific character</li>
        <li>Repeat for all your characters</li>
        <li>Now you can auto-import from full roster screenshots!</li>
    </ol>
</div>

@if (!_initialized)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="mb-3">
        <div class="btn-group">
            <button class="btn btn-outline-primary" @onclick="() => _filterRarity = null">
                All (@_allCharacters.Count)
            </button>
            <button class="btn btn-outline-warning" @onclick="() => _filterRarity = CharacterRarity.Legendary">
                Legendary (@_allCharacters.Count(c => c.Rarity == CharacterRarity.Legendary))
            </button>
            <button class="btn btn-outline-primary" @onclick="() => _filterRarity = CharacterRarity.Epic">
                Epic (@_allCharacters.Count(c => c.Rarity == CharacterRarity.Epic))
            </button>
        </div>
        
        <div class="float-end">
            <span class="badge bg-success">@_templatesCount / @_allCharacters.Count templates uploaded</span>
        </div>
    </div>

    <div class="row">
        @foreach (var character in GetFilteredCharacters())
        {
            var hasTemplate = _characterTemplates.Contains(character.Id);

            <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
                <div class="card @(hasTemplate ? "border-success" : "border-warning")">
                    <div class="card-header">
                        <h6 class="mb-0">
                            @character.Name
                            @if (hasTemplate)
                            {
                                <span class="badge bg-success float-end">?</span>
                            }
                            else
                            {
                                <span class="badge bg-warning float-end">Missing</span>
                            }
                        </h6>
                        <small class="text-muted">
                            <span class="badge bg-@(character.Rarity == CharacterRarity.Legendary ? "warning" : "primary")">
                                @character.Rarity
                            </span>
                            <span class="badge bg-secondary">@character.Role</span>
                        </small>
                    </div>

                    @if (_templatePreviews.ContainsKey(character.Id))
                    {
                        <img src="@_templatePreviews[character.Id]" class="card-img-top" alt="@character.Name template" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-muted">No template</span>
                        </div>
                    }

                    <div class="card-body">
                        @if (_uploadingCharacter == character.Id)
                        {
                            <div class="text-center">
                                <div class="spinner-border spinner-border-sm text-primary" role="status">
                                    <span class="visually-hidden">Uploading...</span>
                                </div>
                                <span class="ms-2">Uploading...</span>
                            </div>
                        }
                        else
                        {
                            <div class="d-grid gap-2">
                                <label class="btn btn-sm btn-primary">
                                    @(hasTemplate ? "Replace" : "Upload") Template
                                    <InputFile OnChange="@(e => HandleTemplateUpload(e, character.Id))" accept="image/*" class="d-none" />
                                </label>
                                
                                @if (hasTemplate)
                                {
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteTemplate(character.Id)">
                                        Delete
                                    </button>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @if (_templatesCount > 0)
    {
        <div class="alert alert-success mt-4">
            <h5>? Ready to Import!</h5>
            <p>You have @_templatesCount character templates uploaded. You can now use the <a href="/import" class="alert-link">Import Screenshot</a> feature to automatically recognize characters!</p>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4">
            <h5>?? No Templates Yet</h5>
            <p>Upload at least a few character templates to start using automatic recognition.</p>
        </div>
    }
}

@code {
    private bool _initialized = false;
    private List<Character> _allCharacters = new();
    private List<string> _characterTemplates = new();
    private Dictionary<string, string> _templatePreviews = new();
    private CharacterRarity? _filterRarity = null;
    private string? _uploadingCharacter = null;
    private int _templatesCount = 0;

    protected override async Task OnInitializedAsync()
    {
        _allCharacters = CharacterData.GetAllCharacters();
        await LoadTemplateIndex();
        _initialized = true;
    }

    private async Task LoadTemplateIndex()
    {
        _characterTemplates = await TemplateStorage.GetTemplateIndexAsync();
        _templatesCount = _characterTemplates.Count;

        // Load preview images for characters with templates
        _templatePreviews.Clear();
        foreach (var characterId in _characterTemplates)
        {
            try
            {
                var templateImage = await TemplateStorage.LoadTemplateAsync(characterId);
                if (templateImage != null)
                {
                    var dataUrl = await ImageProcessor.ConvertToDataUrl(templateImage);
                    _templatePreviews[characterId] = dataUrl;
                    templateImage.Dispose();
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error loading preview for {characterId}: {ex.Message}");
            }
        }
    }

    private List<Character> GetFilteredCharacters()
    {
        if (_filterRarity == null)
            return _allCharacters;

        return _allCharacters.Where(c => c.Rarity == _filterRarity).ToList();
    }

    private async Task HandleTemplateUpload(InputFileChangeEventArgs e, string characterId)
    {
        _uploadingCharacter = characterId;
        StateHasChanged();

        try
        {
            var file = e.File;
            
            if (file.Size > 5 * 1024 * 1024) // 5MB limit
            {
                Console.WriteLine("? File too large");
                return;
            }

            Console.WriteLine($"?? Uploading template for {characterId}...");

            // Read file
            var buffer = new byte[file.Size];
            await file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024).ReadAsync(buffer);

            // Load image
            var templateImage = await ImageProcessor.LoadImageFromBytes(buffer);

            // Save template
            await TemplateStorage.SaveTemplateAsync(characterId, templateImage);

            // Update preview
            var dataUrl = await ImageProcessor.ConvertToDataUrl(templateImage);
            _templatePreviews[characterId] = dataUrl;

            templateImage.Dispose();

            // Reload index
            await LoadTemplateIndex();

            Console.WriteLine($"? Template uploaded for {characterId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"? Error uploading template: {ex.Message}");
        }
        finally
        {
            _uploadingCharacter = null;
            StateHasChanged();
        }
    }

    private async Task DeleteTemplate(string characterId)
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", $"Delete template for {CharacterData.GetCharacterById(characterId)?.Name}?"))
            return;

        await TemplateStorage.DeleteTemplateAsync(characterId);
        _templatePreviews.Remove(characterId);
        await LoadTemplateIndex();
        StateHasChanged();
    }
}
